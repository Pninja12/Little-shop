#Funções
def apagar_ecra(): #Código original do meu colega Ricardo 
 
    #O OS do windows é 'nt'
    if os.name == 'nt':
        #O 'cls' é o código para apagar o terminal no Windows
        os.system('cls')
    else:
        #O 'clear' é o código para apagar o terminal no Mac e no linux
        os.system('clear')

def list_resource():
        print("Wood for 1 gold\nStone for 2 gold\nIron for 4 gold\nFiber for 3 gold\nLeather for 5 gold\nSapphire for 50 gold\nRuby for 65 gold\nDiamond for 80 gold")

def choice(x,y,z):
        if x == "wood":
                z = z - 1
                print("You bought Wood!")
        elif x == "stone":
                z = z - 2
                print("You bought Stone!")
        elif x == "iron":
                z = z - 4
                print("You bought Iron!")
        elif x == "iron":
                z = z - 4
                print("You bought Iron!")


        

#Classes
class resource:
        cost =1 
        name = ""
        def __init__(self, name, cost):
                self.name = name
                self.cost = cost


#Classes               
class screen(resource):
        cost += 2
class battery(resource):
        cost += 1

        def __init__():
                cost += 1
                if gold > 2:
                        choosing.appendleft("AAAA")

                cost += 2
                if gold > 3:
                        choosing.appendleft("AAA")

                cost += 3

                if gold > 4:
                        choosing.appendleft("AA")

                cost += 4

                if gold > 5:
                        choosing.appendleft("A")


#Game
while gold != 1000 and gold != 0:
        print(f"Good morning, this is your {day}º day.\nLet's start the day with some shopping.")
        while loop == 0:
                if choicem != "done":
                        print("You can buy:")
                        list_resource()
                        while (True):
                                print("Which one do you want to buy?")
                                print("(When ready type 'done')")
                                answer = input("-->")
                                choice(answer.islower(),no,gold)




                else:
                        loop = 1
        loop = 0
        apagar_ecra()



