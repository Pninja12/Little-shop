                desfunction = choice(answer,gold,material)
                gold = desfunction[0]
                if desfunction[1] != "": 
                        inventory_material.append(desfunction[1])
                if answer == "done":
                        print("Let's head to the next one.")
                        apagar_ecra()
                        break
                apagar_ecra()
