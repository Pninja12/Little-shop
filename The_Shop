                print("-\nYou can make a Divine Mega Armor with 5 Iron and 1 Diamond")

#Classes
class Craft:
        player_xp = 1 
        name = ""
        cost = 1
        def __init__(self,name, cost,player_xp):
                while(True):        
                        name = input("Name it:")
                        cost = input("How much does it cost:")
                        if name != "" and cost != "":
                                break
                self.name = name
                self.cost = cost
                self.player_xp = player_xp

#Classes               
class Sword(Craft):
        if number == 1:
                def __init__(self, name, cost, player_xp):
                        super().__init__(name + "Sword", cost, player_xp)
                        self.player_xp += 17
        elif number == 2:
                def __init__(self, name, cost, xp):
                        super().__init__(name + "Sword", cost, xp)
                        self.player_xp += + 27
        elif number == 3:
                def __init__(self, name, cost, xp):
                        super().__init__(name + "Sword", cost, xp)
                        self.player_xp += 37
        elif number == 4:
                def __init__(self, name, cost, xp):
                        super().__init__(name + "Sword", cost, xp)
                        self.player_xp += 47
        elif number == 5:
                def __init__(self, name, cost, xp):
                        super().__init__(name + "Sword", cost, xp)
                        self.player_xp += 77
        elif number == 6:
                def __init__(self, name, cost, xp):
                        super().__init__(name + "Sword", cost, xp)
                        self.player_xp += 87
        elif number == 7:
                def __init__(self, name, cost, xp):
                        super().__init__(name + "Sword", cost, xp)
                        self.player_xp += 97

