import random
from collections import deque


inventory = []
choosing = deque()
gold = 0
cost = 0




def existe():
    print(choosing)
   

class Item:
    name = ""
    gold = 1
    def __init__(self, name, gold):
        self.name = name
        self.gold = gold

class Weapon(Item):
        name = "Sword "
        damage = 12
        def __init__(self, subtype, gold, damage):
                super().__init__(self.name + subtype, gold)
                self.damage = damage

        def calculateDamage(self, enemy):
                enemy.hp -= self.damage

class Armor(Item):
        name = "Armor "
        damage = 12
        def __init__(self, subtype, gold):
                super().__init__(self.name + subtype, gold)




nome = input("Diz-me o nome")
ouro = input("diz-me o ouro")






class resource:
        cost =1 
        name = ""
        def __init__(self, name, cost):
                self.name = name
                self.cost = cost
                
class screen(resource):
        cost += 2
class battery(resource):
        cost += 1

        def __init__():
                cost += 1
                if gold > 2:
                        choosing.appendleft("AAAA")

                cost += 2
                if gold > 3:
                        choosing.appendleft("AAA")

                cost += 3

                if gold > 4:
                        choosing.appendleft("AA")

                cost += 4

                if gold > 5:
                        choosing.appendleft("A")
class hardware(resource):
        cost += 3
class small(screen):
        cost += 1
class medium(screen):
        cost += 2
class sbig(screen):
        cost += 3
class byte(hardware):
        cost += 1
class kilobyte(hardware):
        cost += 2
class megabyte(hardware):
        cost += 3
class gigabyte(hardware):
        cost += 4
class terabyte(hardware):
        cost += 5

while gold != 100:
    
    nome = input("Diz-me o nome")
    ouro = input("diz-me o ouro")
    choosing.appendleft(Weapon(nome, int(ouro), 4))
    for i in choosing:
        print(i.name, i.gold, i.damage)
    result = input("Bom dia, que vai comprar?")
    print(gold, cost)
    gold += 1


