#Funções
def apagar_ecra(): #Código original do meu colega Ricardo 
 
    #O OS do windows é 'nt'
    if os.name == 'nt':
        #O 'cls' é o código para apagar o terminal no Windows
        os.system('cls')
    else:
        #O 'clear' é o código para apagar o terminal no Mac e no linux
        os.system('clear')

def list_resource():
        print("Wood for 1 gold\nStone for 2 gold\nIron for 4 gold\nFiber for 3 gold\nLeather for 5 gold\nSapphire for 50 gold\nRuby for 65 gold\nDiamond for 80 gold")

def choice(x,z,a):
        if x.lower() == "wood":
                z = z - 1
                print("You bought Wood!")
                a="wood"
        elif x.lower() == "stone":
                z = z - 2
                print("You bought Stone!")
                a="stone"
        elif x.lower() == "iron":
                z = z - 4
                print("You bought Iron!")
                a="iron"
        elif x.lower() == "fiber":
                z = z - 3
                print("You bought Fiber!")
                a="fiber"
        elif x.lower() == "leather":
                z = z - 5
                print("You bought Leather!")
                a="leather"
        elif x.lower() == "sapphire":
                z = z - 50
                print("You bought Sapphire!!!")
                a="sapphire"
        elif x.lower() == "ruby":
                z = z - 65
                print("You bought Ruby!!!")
                a="ruby"
        elif x.lower() == "diamond":
                z = z - 80
                print("You bought Diamond!!!")
                a="diamond"
        else:
                if x.lower() != "done":
                        print("Write again")
        
        return z,a
                

        

#Classes
class resource:
        cost =1 
        name = ""
        def __init__(self, name, cost):
                self.name = name
                self.cost = cost


#Classes               
class screen(resource):
        cost += 2
class battery(resource):
        cost += 1

        def __init__():
                cost += 1
                if gold > 2:
                        choosing.appendleft("AAAA")

                cost += 2
                if gold > 3:
                        choosing.appendleft("AAA")

                cost += 3

                if gold > 4:
                        choosing.appendleft("AA")

                cost += 4

                if gold > 5:
                        choosing.appendleft("A")


#Game
while gold != 1000 and gold != 0:
        print(f"Good morning, this is your {day}º day.\nLet's start the day with some shopping.")
        while loop == 0:
                print("You can buy:")
                list_resource()
                while (True):
                        no=0
                        print("Which one do you want to buy?")
                        print("(When ready type 'done')")
                        answer = input("-->")
                        desfunction = choice(answer,gold,material)
                        gold = desfunction[0]
                        material = desfunction[1]
                        if material != "": 
                                inventory_material.append(material)

                        if answer.lower() == "done":
                                print("Let's head to the next one.")
                                break

        loop = 0
        apagar_ecra()



